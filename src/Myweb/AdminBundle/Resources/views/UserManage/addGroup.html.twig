{% extends "MywebAdminBundle:Layout:dashbord.html.twig"%}
{% set pageTitle= '添加用户组'%}
{% block main %}
<div class="main_form">
    <form role="form" action="{{path('myweb_admin_doAddGroup')}}" method="post">
        <div class="form-group">
            <label >name</label>
            <input name="name" type="text" placeholder="group name"/>
        </div>
      {% for permission in permissions %}
        <div class="form-group">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="permissions[]" value="{{permission.id}}"/> {{permission.description}}
                </label>
            </div>   
                 {% endfor %}
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
{% endblock %}